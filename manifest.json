{
    "manifest_version": 2,
    "name" : "TradeHelper", 
    "version" : "1",
    
    "options_page": "options.html",
    "description" : "First App",
    "background": {
        "scripts": ["js/jquery.min.js","background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "js/injected.js"
    ],
    "browser_action": {
        "default_title": "Add resize control to element",
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
    {
      "matches": [ "https://market.csgo.com/*/*" ],
      "js": [ "js/jquery.min.js", "background.js" ],
      "css" : ["css/inject.css"],
	  "run_at": "document_end"
    }
  ]
}